{
    "manifest_version": 2,

    "name": "DivsBeGone",
    "description": "This extension removes any unwanted divs on your search page",
    "version": "1.0",

    "browser_action": {
        "default_icon": "trashCanIcon.png",
        "default_popup": "popup.html",
        "default_title": "Start removing divs"
    },
    "content_scripts": [{
        "matches": ["https://www.reddit.com/*"],
        "js": ["removeDivs.js"],
        "run_at": "document_end"
    }],

    "permissions": [
        "activeTab"
    ]
}